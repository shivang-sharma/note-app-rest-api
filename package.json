{
  "name": "speer-note-app-rest-api",
  "version": "1.0.0",
  "description": "REST APIs for speer note app",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "clean": "rm -rf build/",
    "start": "node dist/index.js",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm",
    "lint": "eslint .",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/index.js",
    "dev:esbuild": "npm run build --watch",
    "dev": "concurrently \"npm:dev:tsc\" \"npm:dev:node\" \"npm:dev:esbuild\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "speer-note-app-rest-api"
  },
  "author": "shivang-sharma",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
